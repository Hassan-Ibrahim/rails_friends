<% if user_signed_in? %>



  <p id="notice"><%= notice %></p>

  <h1>User Posts</h1>

  <table>
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>  <% post.title %>  </td>
          <td> <h2><%= post.content %></h2></td>
          <td><% link_to 'Show', post %></td>
          <td><%= link_to 'Edit Post', edit_post_path(post), class: "btn btn-dark btn-sm" %></td>
          <td><%= link_to 'Destroy Post', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-dark btn-sm" %></td>
        </tr>
      </br>
      <% end %>
    </tbody>
  </table>
  </br>

  <br>

  <%= link_to 'New Post', new_post_path, class: "btn btn-dark btn-sm" %>
<% else %>
 <h1>App for FRIENDS</h1>
 </br>
 <h2>Please signin first</h2>

<% end %>
